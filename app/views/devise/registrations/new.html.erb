<h2>Sign up</h2>
<br><br><br><br><br><center>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div id="div_id_name" class="form-group">
  
    <%= f.label :username, :class => "control-label col-md-4  requiredField"%>
	 <div class="controls col-md-3 ">
    <%= f.text_field :username, :class => "input-md  textinput textInput form-control", autofocus: true, autocomplete: "username"%>
	</div>
  </div>
  
  
  <div id="div_id_name" class="form-group">
  
    <%= f.label :email, :class => "control-label col-md-4  requiredField"%>
	 <div class="controls col-md-3 ">
    <%= f.email_field :email, :class => "input-md  textinput textInput form-control", autofocus: true, autocomplete: "email"%>
	</div>
  </div>
  
  
    <div id="div_id_name" class="form-group">  
    <%= f.label :password, :class => "control-label col-md-4  requiredField"%>
	  <% if @minimum_password_length %>
	     <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
	 <div class="controls col-md-3 ">
    <%= f.password_field :password, :class => "input-md  textinput textInput form-control", autofocus: true, autocomplete: "new-password"%>	 
	</div>
  </div>

	<div id="div_id_name" class="form-group">
  
    <%= f.label :password_confirmation, :class => "control-label col-md-4  requiredField"%>
	 <div class="controls col-md-3 ">
    <%= f.password_field :password_confirmation, :class => "input-md  textinput textInput form-control", autofocus: true, autocomplete: "new-password"%>
	</div>
  </div>
  
  


    <div class="btn btn-primar">
    <%= f.submit :class => "btn btn btn-primary", value: "Sign Up" %>
  </div>


<% end %>

<%= render "devise/shared/links" %>
