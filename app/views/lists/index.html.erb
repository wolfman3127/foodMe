<p id="notice"><%= notice %></p>

<br><br><br><br><br><br>

<% nameForEmail = Array.new %>
<% day = ["Mon","Tues","Wed","Thurs","Fri","Sat","Sun"] %>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Day</th>
      <th>Name</th>
	  <th>Ingredients</th>
      <th>Healthy</th>
      <th>Username</th>
	  <th>Email</th>
      <th colspan="4"></th>
    </tr>      
  </thead>

  <tbody>
  
  
     <% @lists.sample(7).each.with_index do |list, index| %>

    <% i= index %>
    <tr>
        <td> <%=day[index]%></td>
		<td><%= list.name %></td>
        <td><%= list.ingredients %></td>
        <td><%= list.healthy %></td>
        <td><%= list.username %></td>
        <td><%= list.email %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Remove', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

	<% nameForEmail[i] = list.name + ' ' + list.ingredients %>

		
    <% end %>
	
	<% x=0 %>
	<% while x<=6 %>
	<%= nameForEmail[x] %>
	<% x= x +1 %>
	<% end %>

  </tbody>
</table>

<br>


